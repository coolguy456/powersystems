    <EditText
        android:id="@+id/EditText03ltl"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditText1ltl"
        android:layout_alignTop="@+id/TextView02ltl"
