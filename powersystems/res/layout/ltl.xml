    <EditText
        android:id="@+id/EditText02ltl"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditText03ltl"
        android:layout_alignTop="@+id/TextView03ltl"
        android:ems="10" />

    <EditText
        android:id="@+id/EditText01ltl"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
