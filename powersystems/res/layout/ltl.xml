        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView09ltl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1ltl"
        android:layout_alignLeft="@+id/TextView01ltl"
        android:layout_marginBottom="20dp"
        android:text="INPUT"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView10ltl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView09ltl"
        android:layout_alignBottom="@+id/TextView09ltl"
        android:layout_alignParentRight="true"
        android:text="OUTPUT"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
</ScrollView>
<RelativeLayout
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#FFFFFF">
<fragment
    android:id="@+id/fr2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    class="com.example.powersystems.sidebar"
    tools:layout="@layout/sb" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>